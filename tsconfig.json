{
  "include": ["src/", "types/"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["DOM", "ES2015"],
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true, /* 只生成声明文件，不生成 js 文件*/ 
    "rootDir": "./src", /* 指定输出文件目录（用于输出），用于控制输出目录结构 */ 
  }
}
